{
    "manifest_version": 2,
    "name": "ffcookies",
    "version": "0.1",
    "permissions": [
        "*://*/",
        "cookies",
        "webRequest",
        "webRequestBlocking",
        "tabs"
    ],
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "icons": {
        "96": "icon.svg", 
        "48": "icon.svg" 
    },
    "browser_action": {
        "default_title": "ffcookies: Firefox cookies migration tool.",
        "default_popup": "browser_action.html"
    },
    "web_accessible_resources": [
        "import.html",
        "import.js",
        "jquery.js",
        "openpgp.js",
        "openpgp.worker.js"
    ]
}
